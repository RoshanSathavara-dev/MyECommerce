<script>

$(document).ready(function () {
    // ✅ Remove item from cart
    $(".remove_product").click(function () {
        var productId = $(this).data("product-id");
        var row = $(this).closest("tr");

        $.post("/ShoppingCart/RemoveFromCart", { productId: productId }, function (response) {
            if (response.success) {
                row.fadeOut(500, function () { $(this).remove(); });
                updateCart(response);
            } else {
                alert(response.message);
            }
        }).fail(function () {
            alert("Error removing product from cart. Please try again!");
        });
    });

    // ✅ Update quantity (Increase)



        // ✅ Increase quantity
        $(".increment").click(function () {
            let productId = $(this).data("product-id");
            let input = $(this).closest(".quantity").find(".quantity-input");
            let newQuantity = parseInt(input.val()) + 1;

            updateQuantity(productId, newQuantity, input);
        });

        // ✅ Decrease quantity
        $(".decrement").click(function () {
            let productId = $(this).data("product-id");
            let input = $(this).closest(".quantity").find(".quantity-input");
            let newQuantity = Math.max(1, parseInt(input.val()) - 1);

            updateQuantity(productId, newQuantity, input);
        });


         $(document).on("click", ".remove-from-cart", function () {
            var productId = $(this).data("product-id");

            $.post("/ShoppingCart/RemoveFromCart", { productId: productId }, function (response) {
                if (response.success) {
                    alert(response.message); // ✅ Show success message
                    updateCartDrawer(response.cartItems, response.totalPrice); // ✅ Update UI dynamically
                } else {
                    alert("Error: " + response.message); // ✅ Show error only if needed
                }
            }).fail(function () {
                alert("Error removing product from cart. Please try again!"); // ✅ Handle failure case
            });
        });

        // ✅ Function to update quantity
          function updateQuantity(productId, quantity, inputField) {
        $.post("/ShoppingCart/UpdateQuantity", { id: productId, quantity: quantity }, function (response) {
            console.log("Update Response:", response); // ✅ Debugging log

            if (response.success) {
                inputField.val(quantity); // ✅ Update input field

                // ✅ Find row and update subtotal
                let row = inputField.closest("tr");
                let price = parseFloat(row.find(".fw-medium.text-main-color").text().replace("$", ""));
                let subtotal = (price * quantity).toFixed(2);
                row.find(".subtotal").text("$" + subtotal); // ✅ Update subtotal

                updateCart(response); // ✅ Update total price and cart count
            } else {
                alert(response.message);
            }
        }).fail(function () {
            alert("Error updating quantity. Please try again!");
        });
    }


        // ✅ Function to update cart total
          function updateCart(cartData) {
        if (!cartData || !cartData.cartItems) {
            console.error("Invalid cart data:", cartData);
            return;
        }

        let totalPrice = cartData.totalPrice ?? 0; // ✅ Ensure totalPrice is not undefined
        $("#cart-total").text("$" + totalPrice.toFixed(2)); // ✅ Update total cart price
        $("#cart-subtotal").text("$" + totalPrice.toFixed(2)); // ✅ Update subtotal

        let cartItemsHtml = "";
        cartData.cartItems.forEach(item => {
            let itemPrice = item.price ?? 0; // ✅ Ensure item price is valid
            let subtotal = (itemPrice * item.quantity).toFixed(2); // ✅ Calculate subtotal

            cartItemsHtml += `
                <tr data-product-id="${item.id}">
                    <td>
                        <div class="d-flex align-items-center gap-4 product-box">
                            <button type="button" class="remove_product" data-product-id="${item.id}">
                                <i class="fas fa-close"></i>
                            </button>
                            <div class="feature-image light-bg">
                                <img src="${item.imageUrl}" class="img-fluid" alt="${item.name}">
                            </div>
                            <div>
                                <span class="fs-sm text-uppercase secondary-text-color d-block">${item.name}</span>
                                <a href="#" class="product-title h6 mt-2 d-block">${item.name}</a>
                            </div>
                        </div>
                    </td>
                    <td><span class="fw-medium text-main-color">$${itemPrice.toFixed(2)}</span></td>
                    <td>
                        <div class="quantity d-flex align-items-center">
                            <input type="number" class="quantity-input" value="${item.quantity}" min="1">
                            <div class="step-btns">
                                <button class="increment" data-product-id="${item.id}">
                                    <i class="fa-solid fa-angle-up"></i>
                                </button>
                                <button class="decrement" data-product-id="${item.id}">
                                    <i class="fa-solid fa-angle-down"></i>
                                </button>
                            </div>
                        </div>
                    </td>
                    <td><span class="text-main-color fw-medium d-block text-end subtotal">$${subtotal}</span></td>
                </tr>
            `;
        });

        $("#cartItemsTable tbody").html(cartItemsHtml); // ✅ Update cart table content
    }
});
</script>


<style>
    /* Hide number input spinners in Chrome, Safari, Edge */
    .quantity-input::-webkit-outer-spin-button,
    .quantity-input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Hide number input arrows in Firefox */
    .quantity-input {
        -moz-appearance: textfield;
    }

</style>
