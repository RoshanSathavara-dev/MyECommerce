@model List<MyECommerce.Models.ShoppingCartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Shopping Cart</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" alt="Product Image" width="50" height="50">
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <form asp-action="UpdateQuantity" method="post">
                            <input type="hidden" name="id" value="@item.Id">
                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control" style="width: 60px; display: inline;">
                            <button type="submit" class="btn btn-sm btn-primary">Update</button>
                        </form>
                    </td>
                    <td>@((item.Price * item.Quantity).ToString("C"))</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Total: @Model.Sum(item => item.Price * item.Quantity).ToString("C")</h4>
    <a href="#" class="btn btn-success">Proceed to Checkout</a>
}
else
{
    <p>Your cart is empty.</p>
}
