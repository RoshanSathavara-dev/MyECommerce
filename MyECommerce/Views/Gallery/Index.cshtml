@model IEnumerable<MyECommerce.Models.GalleryImage>

<h2>Manage Gallery Images</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<a asp-action="Upload" class="btn btn-primary mb-3">Upload New Image</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Uploaded Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var image in Model)
        {
            <tr>
                <td>
                    <img src="@image.ImageUrl" alt="Gallery Image" width="120" height="80" class="img-thumbnail" />
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@image.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="Delete" asp-route-id="@image.Id" method="post" class="d-inline"
                          onsubmit="return confirm('Are you sure you want to delete this image?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
