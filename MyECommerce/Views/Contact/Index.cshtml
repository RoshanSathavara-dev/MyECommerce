<!-- jQuery for AJAX -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#customZulaForm").submit(function (e) {
            e.preventDefault();

            $.get("/Account/CheckSession", function (data) {
                if (!data.isAuthenticated) {
                    $("#responseMessage")
                        .removeClass("text-success")
                        .addClass("text-danger")
                        .text("You must be logged in to submit a request!")
                        .show();
                    return;
                }

                var formData = new FormData();
                formData.append("__RequestVerificationToken", $('input[name="__RequestVerificationToken"]').val());
                formData.append("Description", $("#description").val().trim());
                formData.append("ContactNo", $("#contactNo").val().trim());

                var email = $("#email").val().trim();
                if (email) {
                    formData.append("Email", email);
                }

                var imageFile = $("#imageFile")[0]?.files[0];
                if (imageFile) {
                    formData.append("imageFile", imageFile);
                }

                $.ajax({
                    type: "POST",
                    url: "/CustomZula/Create",
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        $("#responseMessage")
                            .removeClass("text-danger")
                            .addClass("text-success")
                            .text(response.message)
                            .show();
                        $("#customZulaForm")[0].reset();
                    },
                    error: function (xhr) {
                        var response = xhr.responseJSON;
                        if (response && response.errors) {
                            $("#responseMessage")
                                .removeClass("text-success")
                                .addClass("text-danger")
                                .html(response.errors.join("<br>")) // ✅ Show each error message separately
                                .show();
                        } else {
                            $("#responseMessage")
                                .removeClass("text-success")
                                .addClass("text-danger")
                                .text(response.message || "An error occurred. Please try again.")
                                .show();
                        }
                    }
                });
            });
        });
    });

</script>