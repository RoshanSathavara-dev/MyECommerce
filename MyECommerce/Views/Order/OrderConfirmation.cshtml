@model MyECommerce.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<section class="order-confirmation-section bg-white ptb-120">
    <div class="container text-center">
        <h2 class="mb-4 text-success">🎉 Order Placed Successfully!</h2>
        <p class="lead">Thank you, @Model.FullName! Your order has been successfully placed.</p>

        <div class="order-summary mt-5">
            <h4 class="mb-3">Order Details</h4>
            <p><strong>Order ID:</strong> @Model.Id</p>
            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd MMM yyyy")</p>
            <p><strong>Total Amount:</strong> $@Model.TotalAmount</p>
            <p><strong>Payment Method:</strong> @Model.PaymentMethod</p>
            <p><strong>Delivery Address:</strong> @Model.Address, @Model.City, @Model.State - @Model.PinCode</p>
        </div>

        <a href="@Url.Action("Index", "Shop")" class="btn btn-primary mt-4">Continue Shopping</a>
    </div>
</section>
