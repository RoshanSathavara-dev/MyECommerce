@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // ✅ Set Admin Layout
    ViewData["Title"] = "Manage Orders";
}

@model List<MyECommerce.Models.Order>

<h2>Manage Orders</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Email</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Order Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.FullName</td>
                <td>@order.Email</td>
                <td>$@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a href="@Url.Action("OrderDetails", "Admin", new { id = order.Id })" class="btn btn-info btn-sm">View</a>
                    <a href="@Url.Action("DeleteOrder", "Admin", new { id = order.Id })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
